= render "shared/left_area"

#right_area
  #about_text_heading 业务介绍
  #about_text
    %table.grey_font{:border => "0", :cellpadding => "0", :cellspacing => "5", :width => "100%"}
      %tbody
        - @items.each do |item|
          %tr
            %td{:width => "80%"}
              = link_to (raw "&gt;　%s" % truncate(item.title, :length => 23)), [item]
            %td{:width => "20%"}
              = l item.created_at, :format => :long

  #paginator
    = paginate collection, :remote => true

