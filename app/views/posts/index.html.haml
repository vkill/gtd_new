= render "shared/left_area"

#right_area
  #about_text_heading 新闻公告
  #about_text
    %table.grey_font{:border => "0", :cellpadding => "0", :cellspacing => "5", :width => "100%"}
      %thead
        %tr
          %th{:width => "70%"}
            标题
          %th{:width => "20%"}
            创建时间
          %th{:width => "10%"}
      %tbody
        - @posts.each do |post|
          %tr
            %td{:width => "70%"}
              = link_to (raw "&gt;　%s" % truncate(post.title, :length => 23)), [post]
            %td{:width => "20%"}
              = l post.created_at, :format => :long
            %th{:width => "10%"}
              - if can? :edit, post
                = link_to t(:edit), [:edit, :admin, post]

  #paginator
    = paginate @posts, :remote => true

