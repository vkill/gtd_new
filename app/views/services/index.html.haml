= render "shared/left_area"

#right_area
  #about_text_heading 业务介绍
  #about_text
    %table.grey_font{:border => "0", :cellpadding => "0", :cellspacing => "5", :width => "100%"}
      %thead
        %tr
          %th{:width => "50%"}
            名字
          %th{:width => "20%"}
            分类
          %th{:width => "20%"}
            所属部门
          %th{:width => "10%"}
      %tbody
        - @services.each do |service|
          %tr
            %td{:width => "50%"}
              = link_to (raw "&gt;　%s" % truncate(service.name, :length => 23)), [service]
            %td{:width => "20%"}
              = link_to service.category_text, services_path("search[category_eq]" => service.category)
            %td{:width => "20%"}
              = link_to service.department_name, services_path("search[department_name_eq]" => service.department_name)
            %td{:width => "10%"}
              - if can? :edit, service
                = link_to t(:edit), [:edit, :admin, service]
  #paginator
    = paginate @services, :remote => true

