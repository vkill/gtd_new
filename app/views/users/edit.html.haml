%header.container_12.clearfix
  .grid_12
    %h1 个人资料修改

%section.container_12.clearfix
  .portlet.grid_12
    %header
      %h2 个人资料修改

    %section
      = simple_form_for @user, :url => user_registration_path(), :method => :put, :html => {:multipart => true, :class => "form has-validation"} do |f|
        = f.input :name
        = f.input :email
        = f.input :gender, :as => :select, :collection => User.get_gender_values
        = f.input :phone_number, :as => :string
        = f.input :location
        = f.input :about, :input_html => { :rows => 5, :cols => 60 }

        = f.input :avatar, :as => :file
        %div
          = f.label :avatar_old
          %img{ :src => "#{@user.url}"}

        .form-action
          = f.button "submit"

