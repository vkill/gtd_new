#table_1
  #table1_bg_left
  #table1_bg_mid
    #table1_heading
      %img(width="380"){:src => image_path("design/lastest.jpg")}
      %ul.list_1.list_1_margin
        - @posts.each do |post|
          %li= link_to (raw "&gt;　%s" % truncate(post.title, :length => 22)), [post]

  #table1_bg_right

