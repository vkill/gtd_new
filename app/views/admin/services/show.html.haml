%header.container_12.clearfix
  .grid_12
    %h1= t("web.page.show", :model => Service.model_name.human)

%section.container_12.clearfix
  .portlet.grid_12
    %header
      %h2= @service.name
      = link_to t("web.page.back_to_list"), [:admin, :services], :class => "button"
      = link_to t("web.page.edit_this"), [:edit, :admin, @service], :class => "button"

    %section
      = show_for @service do |service|
        = service.attributes :id, :name, :category_text, :expired_date_hours, :describtion
        = service.attribute :created_at, :format => :short
        = service.attribute :updated_at, :format => :short

