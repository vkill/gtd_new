= simple_form_for @item, :url => url, :html => {:multipart => true, :class => 'form has-validation'} do |f|
  = f.input :title
  = f.input :permalink
  = f.input :content, :input_html => { :id => "kindeditor_id" }
  - if @item.class.name == 'Software'
    = f.simple_fields_for :attachments do |attachment_fields|
      = attachment_fields.input :data, :as => :file

  = f.input :top, :as => :select, :collection => @model.get_top_values, :include_blank => false
  = f.input :category, :as => :select, :collection => @model.get_category_values,
                                        :prompt => t(:select_options)
  .form-action
    = f.button "submit"

= content_for :javascript do
  = include_kindeditor_if_needed :lang => :zh_CN, :cache => true

